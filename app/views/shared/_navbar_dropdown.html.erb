<div class="<%= full_item ? ' dropdown full-item' : 'dropdown' %> hidden-md hidden-lg">
  <a class='navbar-wagon-link-menu-wrapper' type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    <div class='navbar-wagon-link-menu'></div>
  </a>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li class="main">
      <%= link_to t("shared.navbar.menu.program"), send(:"program_#{locale.to_s.underscore}_path") %>
    </li>
    <li class='main'>
      <%= link_to "Alumni", alumni_path, locale: locale %>
    </li>
    <li class="main">
      <%= link_to t("shared.navbar.mobile_employers", default: "Recruitment"), employers_path %>
    </li>
    <li class="main">
      <%= link_to t("shared.navbar.mobile_enterprise", default: "Corporate"), enterprise_path %>
    </li>
    <li class="main">
      <%= link_to 'FAQ', faq_path %>
    </li>
    <li class="main hidden-md hidden-lg">
      <%= link_to t('shared.navbar.apply'), send(:"apply_#{locale.to_s.underscore}_path") %>
    </li>
    <li class="main hidden-md hidden-lg">
      <div class="flags-smartphone">
        <%= link_to locale_current_url_for(:fr), style: ("opacity: .3" unless locale == :fr) do %>
          <%= render 'shared/french_flag' %>
        <% end %>

        <%= link_to locale_current_url_for(:en), style: ("opacity: .3" unless locale == :en) do %>
          <%= render 'shared/english_flag' %>
        <% end %>

        <%= link_to locale_current_url_for(:"pt-BR"), style: ("opacity: .3" unless locale == :"pt-BR") do %>
          <%= render 'shared/brazilian_flag' %>
        <% end %>

        <%= link_to locale_current_url_for(:"zh-CN"), style: ("opacity: .3" unless locale == :"zh-CN") do %>
          <%= render 'shared/chinese_flag' %>
        <% end %>
      </div>
    </li>
  </ul>
</div>
