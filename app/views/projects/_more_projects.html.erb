<% @projects.each_slice(2) do |projects| %>
  <div class="projects-bundle">
    <% projects.each do |project| %>
      <% project = OpenStruct.new project %>
      <div class="project-card">
        <a class='project-url' target='_blank' href=<%= project.url %>>
          <div class="project-card-thumbnail" style="background: url(<%= project.card %>);background-size:cover;background-position:center center;">
          </div>
        </a>
        <div class="project-card-details">
          <div class="project-makers">
            <% project.makers.each do |maker| %>
              <% maker = OpenStruct.new maker %>
              <div class="project-maker">
                <a href=<%= "http://alumni.lewagon.org/#{maker.github_nickname}" %> target='_blank'>
                  <%= cl_adaptive_image_tag maker.photo_path, width: 80, height: 80, crop: :fill, class: "avatar" %>
                </a>
              </div>
            <% end %>
          </div>
          <a class='project-url' target='_blank' href=<%= project.url %>>
            <h2><%= project.name %></h2>
          </a>
          <span><%= project.tagline[I18n.locale.to_s] %></span>
          <i><%= project.city["name"] %> - Batch #<%= project.batch %></i>
        </div>
      </div>
    <% end %>
  </div>
<% end %>